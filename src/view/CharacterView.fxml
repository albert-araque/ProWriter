<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="800.0" prefWidth="1280.0"
	style="-fx-background-color: white;"
	xmlns="http://javafx.com/javafx/11.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="view.controllers.CharacterViewController">
	<bottom>
		<BorderPane prefHeight="38.0" prefWidth="1280.0">
			<left>
				<Label fx:id="selectedCharacterLabel" prefHeight="30.0"
					prefWidth="422.0" text="Ningun personaje seleccionado"
					BorderPane.alignment="CENTER">
					<BorderPane.margin>
						<Insets left="15.0" />
					</BorderPane.margin>
				</Label>
			</left>
			<right>
				<Label fx:id="errorLabel" alignment="CENTER_RIGHT"
					prefHeight="30.0" prefWidth="227.0"
					text="Debes seleccionar un personaje!" textFill="RED"
					visible="false" BorderPane.alignment="CENTER">
					<font>
						<Font name="System Bold" size="12.0" />
					</font>
					<BorderPane.margin>
						<Insets right="15.0" />
					</BorderPane.margin>
				</Label>
			</right>
		</BorderPane>
	</bottom>
	<top>
		<BorderPane prefHeight="50.0" prefWidth="1280.0">
			<left>
				<Label prefHeight="35.0" prefWidth="197.0" text="PERSONAJES"
					BorderPane.alignment="CENTER">
					<BorderPane.margin>
						<Insets left="15.0" />
					</BorderPane.margin>
					<font>
						<Font name="System Bold" size="24.0" />
					</font>
				</Label>
			</left>
		</BorderPane>
	</top>
	<center>
		<ScrollPane BorderPane.alignment="CENTER">
			<content>
				<FlowPane fx:id="characterFlowPane">
				</FlowPane>
			</content>
		</ScrollPane>
	</center>
	<left>
		<VBox prefHeight="712.0" prefWidth="159.0"
			BorderPane.alignment="CENTER">
			<children>
				<Pane fx:id="projectButton" prefHeight="60.0" prefWidth="100.0"
					style="-fx-border-style: solid; -fx-border-color: dadada;">
					<children>
						<Text layoutX="14.0" layoutY="36.0" strokeType="OUTSIDE"
							strokeWidth="0.0" text="PROYECTOS" textAlignment="CENTER">
							<font>
								<Font name="System Bold" size="15.0" />
							</font>
						</Text>
					</children>
					<VBox.margin>
						<Insets />
					</VBox.margin>
				</Pane>
				<Pane fx:id="bookButton" layoutX="10.0" layoutY="10.0"
					prefHeight="60.0" prefWidth="100.0"
					style="-fx-border-style: solid; -fx-border-color: dadada;">
					<children>
						<Text layoutX="14.0" layoutY="36.0" strokeType="OUTSIDE"
							strokeWidth="0.0" text="LIBROS" textAlignment="CENTER">
							<font>
								<Font name="System Bold" size="15.0" />
							</font>
						</Text>
					</children>
					<VBox.margin>
						<Insets />
					</VBox.margin>
				</Pane>
				<Pane fx:id="characterButton" layoutX="10.0" layoutY="70.0"
					prefHeight="60.0" prefWidth="100.0"
					style="-fx-border-style: solid; -fx-border-color: dadada;">
					<children>
						<Text layoutX="14.0" layoutY="36.0" strokeType="OUTSIDE"
							strokeWidth="0.0" text="PERSONAJES" textAlignment="CENTER">
							<font>
								<Font name="System Bold" size="15.0" />
							</font>
						</Text>
					</children>
					<VBox.margin>
						<Insets />
					</VBox.margin>
				</Pane>
				<Pane fx:id="locationButton" layoutX="10.0" layoutY="130.0"
					prefHeight="60.0" prefWidth="100.0"
					style="-fx-border-style: solid; -fx-border-color: dadada;">
					<children>
						<Text layoutX="14.0" layoutY="36.0" strokeType="OUTSIDE"
							strokeWidth="0.0" text="LOCALIZACIONES" textAlignment="CENTER">
							<font>
								<Font name="System Bold" size="15.0" />
							</font>
						</Text>
					</children>
					<VBox.margin>
						<Insets />
					</VBox.margin>
				</Pane>
			</children>
		</VBox>
	</left>
</BorderPane>
