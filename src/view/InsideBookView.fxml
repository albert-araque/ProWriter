<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="800.0" prefWidth="1280.0"
	style="-fx-background-color: white;"
	xmlns="http://javafx.com/javafx/11.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="view.controllers.InsideBookViewController">
	<bottom>
		<BorderPane prefHeight="38.0" prefWidth="1280.0" />
	</bottom>
	<top>
		<BorderPane prefHeight="50.0" prefWidth="1280.0">
			<right>
				<HBox alignment="CENTER" prefHeight="50.0" prefWidth="82.0"
					BorderPane.alignment="CENTER">
					<children>
						<Button fx:id="backButton" mnemonicParsing="false"
							text="Volver">
							<HBox.margin>
								<Insets />
							</HBox.margin>
						</Button>
					</children>
				</HBox>
			</right>
			<left>
				<Label text="LIBRO:" BorderPane.alignment="CENTER">
					<BorderPane.margin>
						<Insets left="15.0" />
					</BorderPane.margin>
					<font>
						<Font name="System Bold" size="24.0" />
					</font>
				</Label>
			</left>
			<center>
				<Label fx:id="bookNameDisplay" prefHeight="33.0"
					prefWidth="696.0" BorderPane.alignment="CENTER_LEFT">
					<BorderPane.margin>
						<Insets left="20.0" />
					</BorderPane.margin>
					<font>
						<Font size="18.0" />
					</font>
				</Label>
			</center>
		</BorderPane>
	</top>
	<center>
		<GridPane
			style="-fx-background-color: #f3f3f3; -fx-border-style: solid none solid none; -fx-border-color: grey;"
			BorderPane.alignment="CENTER">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="100.0" />
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="100.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
				<Pane fx:id="chapterPane" prefHeight="300.0" prefWidth="300.0"
					GridPane.columnIndex="1" GridPane.rowIndex="1">
					<children>
						<ImageView fx:id="chapterPaneImage" fitHeight="150.0"
							fitWidth="200.0" layoutX="50.0" layoutY="40.0"
							pickOnBounds="true" />
						<Label layoutX="80.0" layoutY="190.0" text="Capitulos">
							<font>
								<Font name="System Bold" size="28.0" />
							</font>
						</Label>
					</children>
				</Pane>
				<Pane fx:id="characterPane" nodeOrientation="RIGHT_TO_LEFT"
					prefHeight="300.0" prefWidth="300.0" GridPane.rowIndex="1">
					<children>
						<ImageView fx:id="characterPaneImage" fitHeight="150.0"
							fitWidth="200.0" layoutX="50.0" layoutY="40.0"
							pickOnBounds="true" />
						<Label layoutX="80.0" layoutY="190.0" text="Personajes">
							<font>
								<Font name="System Bold" size="28.0" />
							</font>
						</Label>
					</children>
				</Pane>
			</children>
		</GridPane>
	</center>
</BorderPane>
