<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="800.0" prefWidth="1280.0"
	style="-fx-background-color: white;"
	xmlns="http://javafx.com/javafx/11.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="view.controllers.InsideBookViewController">
	<bottom>
		<BorderPane prefHeight="38.0" prefWidth="1280.0" />
	</bottom>
	<top>
		<BorderPane prefHeight="50.0" prefWidth="1280.0">
			<right>
				<HBox alignment="CENTER" prefHeight="50.0" prefWidth="82.0"
					BorderPane.alignment="CENTER">
					<children>
						<Button fx:id="backButton" mnemonicParsing="false"
							text="Volver">
							<HBox.margin>
								<Insets />
							</HBox.margin>
						</Button>
					</children>
				</HBox>
			</right>
			<left>
				<Label text="LIBRO:" BorderPane.alignment="CENTER">
					<BorderPane.margin>
						<Insets left="15.0" />
					</BorderPane.margin>
					<font>
						<Font name="System Bold" size="24.0" />
					</font>
				</Label>
			</left>
			<center>
				<Label fx:id="projectNameDisplay" prefHeight="33.0"
					prefWidth="696.0" BorderPane.alignment="CENTER_LEFT">
					<BorderPane.margin>
						<Insets left="20.0" />
					</BorderPane.margin>
					<font>
						<Font size="18.0" />
					</font>
				</Label>
			</center>
		</BorderPane>
	</top>
	<center>
		<ScrollPane prefHeight="200.0" prefWidth="200.0"
			BorderPane.alignment="CENTER">
			<content>
				<AnchorPane prefHeight="708.0" prefWidth="1276.0">
					<children>
						<Pane fx:id="characterPane" layoutX="318.0" layoutY="204.0"
							prefHeight="300.0" prefWidth="300.0">
							<children>
								<ImageView fitHeight="150.0" fitWidth="200.0"
									layoutX="50.0" layoutY="40.0" pickOnBounds="true">
									<image>
										<Image url="@../resources/character_icon.png" />
									</image>
								</ImageView>
								<Label layoutX="80.0" layoutY="190.0" text="Personajes">
									<font>
										<Font name="System Bold" size="28.0" />
									</font>
								</Label>
							</children>
						</Pane>
						<Pane fx:id="scenePane" layoutX="658.0" layoutY="204.0"
							prefHeight="300.0" prefWidth="300.0">
							<children>
								<ImageView fitHeight="150.0" fitWidth="200.0"
									layoutX="50.0" layoutY="40.0" pickOnBounds="true">
									<image>
										<Image url="@../resources/scene_icon.png" />
									</image>
								</ImageView>
								<Label layoutX="100.0" layoutY="190.0" text="Escenas">
									<font>
										<Font name="System Bold" size="28.0" />
									</font>
								</Label>
							</children>
						</Pane>
					</children>
				</AnchorPane>
			</content>
		</ScrollPane>
	</center>
</BorderPane>
