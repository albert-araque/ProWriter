<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="800.0" prefWidth="1280.0"
	style="-fx-background-color: white;"
	xmlns="http://javafx.com/javafx/11.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="view.controllers.LocationViewController">
	<bottom>
		<BorderPane prefHeight="38.0" prefWidth="1280.0">
			<left>
				<Label fx:id="selectedLocationLabel" prefHeight="30.0"
					prefWidth="422.0" text="Ninguna localizacion seleccionada"
					BorderPane.alignment="CENTER">
					<BorderPane.margin>
						<Insets left="15.0" />
					</BorderPane.margin>
				</Label>
			</left>
			<right>
				<Label fx:id="errorLabel" alignment="CENTER_RIGHT"
					prefHeight="30.0" prefWidth="227.0"
					text="Debes seleccionar una localizacion!" textFill="RED"
					visible="false" BorderPane.alignment="CENTER">
					<font>
						<Font name="System Bold" size="12.0" />
					</font>
					<BorderPane.margin>
						<Insets right="15.0" />
					</BorderPane.margin>
				</Label>
			</right>
		</BorderPane>
	</bottom>
	<top>
		<BorderPane prefHeight="50.0" prefWidth="1280.0">
			<right>
				<HBox alignment="CENTER" prefHeight="50.0" prefWidth="527.0"
					BorderPane.alignment="CENTER">
					<children>
						<Button fx:id="displayLocationButton" alignment="CENTER"
							layoutX="27.0" layoutY="20.0" mnemonicParsing="false"
							prefHeight="30.0" prefWidth="120.0" text="Ver localizacion">
							<HBox.margin>
								<Insets right="10.0" />
							</HBox.margin>
						</Button>
						<Button fx:id="deleteLocationButton" alignment="CENTER"
							mnemonicParsing="false" prefHeight="30.0" prefWidth="130.0"
							text="Borrar localizacion" />
						<Button fx:id="updateLocationButton" alignment="CENTER"
							mnemonicParsing="false" prefHeight="30.0" prefWidth="138.0"
							text="Actualizar localizacion">
							<HBox.margin>
								<Insets left="10.0" right="10.0" />
							</HBox.margin>
						</Button>
						<Button fx:id="addLocationButton" alignment="CENTER"
							contentDisplay="CENTER" mnemonicParsing="false" prefHeight="30.0"
							prefWidth="130.0" text="AÃ±adir localizacion" />
					</children>
				</HBox>
			</right>
			<left>
				<Label prefHeight="35.0" prefWidth="220.0"
					text="LOCALIZACIONES:" BorderPane.alignment="CENTER">
					<BorderPane.margin>
						<Insets left="15.0" />
					</BorderPane.margin>
					<font>
						<Font name="System Bold" size="24.0" />
					</font>
				</Label>
			</left>
		</BorderPane>
	</top>
	<center>
		<ScrollPane BorderPane.alignment="CENTER">
			<content>
				<FlowPane fx:id="locationFlowPane">
				</FlowPane>
			</content>
		</ScrollPane>
	</center>
	<left>
		<VBox prefHeight="712.0" prefWidth="159.0"
			BorderPane.alignment="CENTER">
			<children>
				<Pane fx:id="projectButton" prefHeight="60.0" prefWidth="100.0"
					style="-fx-border-style: solid; -fx-border-color: dadada;">
					<children>
						<Text layoutX="14.0" layoutY="36.0" strokeType="OUTSIDE"
							strokeWidth="0.0" text="PROYECTOS" textAlignment="CENTER">
							<font>
								<Font name="System Bold" size="15.0" />
							</font>
						</Text>
					</children>
					<VBox.margin>
						<Insets />
					</VBox.margin>
				</Pane>
				<Pane fx:id="bookButton" layoutX="10.0" layoutY="10.0"
					prefHeight="60.0" prefWidth="100.0"
					style="-fx-border-style: solid; -fx-border-color: dadada;">
					<children>
						<Text layoutX="14.0" layoutY="36.0" strokeType="OUTSIDE"
							strokeWidth="0.0" text="LIBROS" textAlignment="CENTER">
							<font>
								<Font name="System Bold" size="15.0" />
							</font>
						</Text>
					</children>
					<VBox.margin>
						<Insets />
					</VBox.margin>
				</Pane>
				<Pane fx:id="characterButton" layoutX="10.0" layoutY="70.0"
					prefHeight="60.0" prefWidth="100.0"
					style="-fx-border-style: solid; -fx-border-color: dadada;">
					<children>
						<Text layoutX="14.0" layoutY="36.0" strokeType="OUTSIDE"
							strokeWidth="0.0" text="PERSONAJES" textAlignment="CENTER">
							<font>
								<Font name="System Bold" size="15.0" />
							</font>
						</Text>
					</children>
					<VBox.margin>
						<Insets />
					</VBox.margin>
				</Pane>
				<Pane fx:id="locationButton" layoutX="10.0" layoutY="130.0"
					prefHeight="60.0" prefWidth="100.0"
					style="-fx-border-style: solid; -fx-border-color: dadada;">
					<children>
						<Text layoutX="14.0" layoutY="36.0" strokeType="OUTSIDE"
							strokeWidth="0.0" text="LOCALIZACIONES" textAlignment="CENTER">
							<font>
								<Font name="System Bold" size="15.0" />
							</font>
						</Text>
					</children>
					<VBox.margin>
						<Insets />
					</VBox.margin>
				</Pane>
			</children>
		</VBox>
	</left>
</BorderPane>
