<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="800.0" prefWidth="1280.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.controllers.ChapterInsideBookViewController">
	<bottom>
		<BorderPane prefHeight="38.0" prefWidth="1280.0">
			<left>
				<Label fx:id="selectedChapterLabel" prefHeight="30.0" prefWidth="422.0" text="Ningun capitulo seleccionado" BorderPane.alignment="CENTER">
					<BorderPane.margin>
						<Insets left="15.0" />
					</BorderPane.margin>
				</Label>
			</left>
			<right>
				<Label fx:id="errorLabel" alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="227.0" text="Debes seleccionar un capitulo!" textFill="RED" visible="false" BorderPane.alignment="CENTER">
					<font>
						<Font name="System Bold" size="12.0" />
					</font>
					<BorderPane.margin>
						<Insets right="15.0" />
					</BorderPane.margin>
				</Label>
			</right>
		</BorderPane>
	</bottom>
	<top>
		<BorderPane prefHeight="50.0" prefWidth="1280.0">
			<right>
				<HBox alignment="CENTER" prefHeight="50.0" prefWidth="615.0" BorderPane.alignment="CENTER">
					<children>
						<Button fx:id="backButton" mnemonicParsing="false" text="Volver">
							<HBox.margin>
								<Insets right="10.0" />
							</HBox.margin>
						</Button>
						<Button fx:id="displayChapterButton" alignment="CENTER" layoutX="27.0" layoutY="20.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="120.0" text="Ver capítulo">
							<HBox.margin>
								<Insets right="10.0" />
							</HBox.margin>
						</Button>
						<Button fx:id="deleteChapterButton" alignment="CENTER" mnemonicParsing="false" prefHeight="30.0" prefWidth="130.0" text="Borrar capítulo" />
						<Button fx:id="updateChapterButton" alignment="CENTER" mnemonicParsing="false" prefHeight="30.0" prefWidth="130.0" text="Actualizar capítulo">
							<HBox.margin>
								<Insets left="10.0" right="10.0" />
							</HBox.margin>
						</Button>
						<Button fx:id="addChapterButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="30.0" prefWidth="130.0" text="Añadir capítulo" />
					</children>
				</HBox>
			</right>
			<left>
				<Label prefHeight="35.0" prefWidth="197.0" text="CAPÍTULOS DE:" BorderPane.alignment="CENTER">
					<BorderPane.margin>
						<Insets left="15.0" />
					</BorderPane.margin>
					<font>
						<Font name="System Bold" size="24.0" />
					</font>
				</Label>
			</left>
			<center>
				<Label fx:id="bookNameDisplay" prefHeight="33.0" prefWidth="540.0" BorderPane.alignment="CENTER_LEFT">
					<BorderPane.margin>
						<Insets left="20.0" />
					</BorderPane.margin>
					<font>
						<Font size="18.0" />
					</font>
				</Label>
			</center>
		</BorderPane>
	</top>
	<center>
		<ScrollPane BorderPane.alignment="CENTER">
			<content>
				<FlowPane fx:id="chapterFlowPane">
				</FlowPane>
			</content>
		</ScrollPane>
	</center>
</BorderPane>
